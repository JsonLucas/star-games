// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())
  name String
  nickname String?
  cpf String @unique
  email String @unique
  password String
  phone String?
  levelId Int @default(1)
  addresses addresses[]
  cards cards[]
  levels levels @relation(fields: [levelId], references: [id])
}
model addresses{
  id Int @id @default(autoincrement())
  street String
  number String
  cep String
  userId Int
  users users @relation(fields: [userId], references: [id])
}

model cards {
  id Int @id @default(autoincrement())
  name String
  number String
  cvv String
  expirationDate DateTime
  userId Int
  user users @relation(fields: [userId], references: [id])
}

model products {
  id Int @id @default(autoincrement())
  name String
  price Float
  categoryId Int
  stock Int
  category categories @relation(fields: [categoryId], references: [id])
}

model categories {
  id Int @id @default(autoincrement())
  name String
  product products[]
}

model purchases {
  id Int @id @default(autoincrement())
  userId Int
  productId Int
  createdAt DateTime @default(now())
}

model levels {
  id Int @id @default(autoincrement())
  name String
  features Json
  users users[]
}
